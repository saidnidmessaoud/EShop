@model Computer

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="@Model.ImageThumbnailUrl" alt="image computer" />
        <div class="caption">
            <h3 class="pull-right">@Model.Price.ToString("c")</h3>
            <h3><a asp-controller="Computer" asp-action="Details" asp-route-id="@Model.ComputerId">@Model.Name</a></h3>
            <p>@Model.Description</p>
        </div>
        <div class="addToCart">
            <p class="button">
                <a asp-controller="ShoppingCart" 
                   asp-action="AddToShoppingCart" 
                   asp-route-computerId="@Model.ComputerId" 
                   class="btn btn-primary">
                    Add to Cart
                </a>
            </p>
        </div>
    </div>
</div>
